{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/chat.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api).*)",
      "destination": "/frontend/$1"
    }
  ]
}
