# AI Image Asset Generator - Environment Variables
# Copy this file to .env and fill in your values

# ==============================================
# REQUIRED: Google Gemini API Key
# ==============================================
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# OPTIONAL: Output Configuration
# ==============================================
# Default directory for generated assets
OUTPUT_DIR=./generated-assets

# Default image size (WIDTHxHEIGHT)
DEFAULT_SIZE=1024x1024

# Default image quality (1-100)
DEFAULT_QUALITY=80

# Default style applied to all generations
DEFAULT_STYLE=modern, professional, high quality

# ==============================================
# OPTIONAL: Processing Configuration
# ==============================================
# Delay between API calls in milliseconds (to avoid rate limits)
API_DELAY=2000

# Maximum retries for failed requests
MAX_RETRIES=3

# Enable verbose logging
VERBOSE=false

# ==============================================
# OPTIONAL: Background Removal
# ==============================================
# Default background color to remove (hex)
BG_REMOVE_COLOR=#FFFFFF

# Color matching threshold (0-255)
BG_REMOVE_THRESHOLD=30

# ==============================================
# OPTIONAL: SVG Conversion
# ==============================================
# Default SVG color
SVG_COLOR=#000000

# Tracing threshold (0-255)
SVG_THRESHOLD=128

# ==============================================
# OPTIONAL: Image Optimization
# ==============================================
# Default output format (webp, png, jpg, avif)
OPTIMIZE_FORMAT=webp

# Compression quality (1-100)
OPTIMIZE_QUALITY=80

# Maximum width for optimization
OPTIMIZE_MAX_WIDTH=1920
